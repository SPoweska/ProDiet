@using Microsoft.AspNetCore.Components.Authorization
@using ProDiet.Areas.Identity
@inject NavigationManager Navigation
@inject TokenProvider TokenProvider

<AuthorizeView>
    <Authorized>
        <a style="color: aliceblue" href="Identity/Account/Manage/Index">
            Mój profil
        </a>
        <a>  </a>
        <form action="/Identity/Account/Logout?returnUrl=%2F" method="post">
            <button class="btn btn-danger" type="submit">Wyloguj</button>
            <input name="__RequestVerificationToken" type="hidden"
                   value="@TokenProvider.XsrfToken"/>
        </form>
    </Authorized>
    <NotAuthorized>
        <a style="color: aliceblue" href="Identity/Account/Register">Rejestracja</a>
        <a style="color: aliceblue" href="Identity/Account/Login">Logowanie</a>
    </NotAuthorized>
</AuthorizeView>

